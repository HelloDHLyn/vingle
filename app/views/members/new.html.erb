<div class="sign-form">
  <h1>회원가입</h1>
  <%= form_for(:member) do |f| %>
    <div class="form-group">
      <%= f.label :userid %>
      <%= f.text_field :userid, class: 'form-control', placeholder: '아이디' %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', placeholder: '비밀번호' %>
    </div>
    <p><%= f.submit "회원가입", class: 'btn btn-default' %></p>
  <% end %>
</div>